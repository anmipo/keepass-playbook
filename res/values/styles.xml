<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<style name="AppTheme" parent="@android:style/Theme.NoTitleBar">
	    <item name="android:windowBackground">@drawable/background</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
	</style>
    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

	<style name="GroupTextSmall" parent="android:Theme">
		<item name="android:textColor">@color/group</item>
		<item name="android:textSize">15sp</item>
	</style>
	<style name="GroupText" parent="android:Theme">
		<item name="android:textColor">@color/group</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="GroupTextLarge" parent="android:Theme">
		<item name="android:textColor">@color/group</item>
		<item name="android:textSize">28sp</item>
	</style>
	<style name="ElementTextSmall">
		<item name="android:textSize">15sp</item>
	</style>
	<style name="ElementText">
		<item name="android:textSize">20sp</item>
	</style>
	<style name="ElementTextLarge">
		<item name="android:textSize">28sp</item>
	</style>
	<style name="GroupLabel">
		<item name="android:textSize">20sp</item>
	</style>
	<style name="WhiteOnBlack">
		<item name="android:background">#666666</item>
		<item name="android:textColor">@android:color/primary_text_dark</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="WhiteOnBlackSmall" parent="WhiteOnBlack">
		<item name="android:textSize">12sp</item>
	</style>
	<style name="WhiteOnDarkSmall" parent="WhiteOnBlack">
		<item name="android:textSize">12sp</item>
		<item name="android:background">#222222</item>
	</style>
	<style name="ElementTextTitle" parent="WhiteOnBlack">
		<item name="android:textColor">@color/group</item>
	</style>
	<style name="Button">
		<item name="android:textSize">20sp</item>
		<item name="android:background">@drawable/btn_dark</item>
		<item name="android:textColor">@android:color/white</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:paddingRight">10dp</item>
		<item name="android:minWidth">100dp</item>
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:layout_marginBottom">5dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">43dp</item>
	</style>
	<style name="Button.Inline">
		<item name="android:layout_marginTop">0dp</item>
		<item name="android:layout_marginBottom">0dp</item>
	</style>
	<style name="Button.Icon" parent="Button.Inline">
		<item name="android:minWidth">50dp</item>
	</style>
	<style name="Button.Copy" parent="Button.Inline">
		<item name="android:text">@android:string/copy</item>
	</style>
	<style name="Button.Back">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">20dp</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">20dp</item>
		<item name="android:drawableLeft">@drawable/ic_back</item>
		<item name="android:drawablePadding">10dp</item>
		<item name="android:layout_centerVertical">true</item>
		<item name="android:layout_alignParentLeft">true</item>
	</style>
	<style name="HeaderBar">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/header_bar_bg</item>
		<item name="android:textColor">@color/group</item>
		<item name="android:height">56dp</item>
		<item name="android:padding">2dp</item>
		<item name="android:textSize">28sp</item>
	</style>
	<!-- Parent style for header children -->
	<style name="Header">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
	</style>
	<style name="Header.Icon">
		<item name="android:scaleType">fitXY</item>
		<item name="android:layout_marginRight">10dp</item>
		<item name="android:layout_centerInParent">true</item>
	</style>
	<style name="Header.Title">
		<item name="android:textColor">@color/group</item>
		<item name="android:textSize">28sp</item>
		<item name="android:layout_centerInParent">true</item>
		<item name="android:ellipsize">end</item>
	</style>
	<style name="ListItem">
		<item name="android:textColor">@color/group</item>
		<item name="android:textSize">20sp</item>
		<item name="android:padding">10dp</item>
	</style>
	<style name="FormLabel">
		<item name="android:textColor">@color/form_label</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="VisiblePassword">
		<item name="android:typeface">monospace</item>
		<item name="android:textSize">20sp</item>
	</style>
	<style name="EntryPropertyName" parent="GroupText">
		<item name="android:background">#40000000</item>
	    <item name="android:textStyle">bold</item>
		<item name="android:paddingLeft">10dp</item>
	</style>
	<style name="EntryPropertyValue" parent="ElementText">
		<item name="android:layout_marginLeft">20dp</item>
		<item name="android:padding">5dp</item>
		<item name="android:textColor">@android:color/primary_text_dark_nodisable</item>
	</style>
</resources>